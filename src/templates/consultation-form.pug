- var FORM = LANG.form;

section.consultation
	.container
		.consultation__wrapper
			.consultation__top
				h2.consultation__title.title!= FORM.title
				p.consultation__desc!= FORM.desc
			form.form-consultation.js-registration-form(action="https://api.apispreadsheets.com/data/QduW22vQumEfA2h6/", method="post" data-validation-schema="signup-form")
				.form-consultation__top
					input.js-input-date(type="hidden" name="date")
					.form-consultation__inputs
						.input-wrap.form-consultation__input-wrap.js-input-wrap
							input.form-consultation__input.input-wrap__input.js-input(type="text", name="name")
							span.input-wrap__label.js-label!= FORM.inputName
							span.input-wrap__error.js-error
						.input-wrap.form-consultation__input-wrap.js-input-wrap
							input.form-consultation__input.input-wrap__input.js-input(type="tel", name="phone")
							span.input-wrap__label.js-label!= FORM.inputPhone
							span.input-wrap__error.js-error
						.input-wrap.form-consultation__input-wrap.js-input-wrap
							input.form-consultation__input.input-wrap__input.js-input(type="email", name="email")
							span.input-wrap__label.js-label!= FORM.inputEmail
							span.input-wrap__error.js-error
					button.form-consultation__btn.btn!= FORM.button_2
				.form-consultation__checkbox.checkbox.js-input-wrap
					label.checkbox__label!= FORM.checkbox
						input.checkbox__input(type="checkbox" name="checkbox")
						span.checkbox__checkmark
							i.fico.fico-check
						span.checkbox__error.js-error